<p style="color: green"><%= notice %></p>

<h1>Restaurants</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= render restaurant %>
    <p>
      <%= link_to "Show this restaurant", restaurant %>
      <% if restaurant.user == current_user %>
      <%= link_to "Edit this restaurant", edit_restaurant_path(restaurant) %>
        <%= link_to "Destroy this restaurant", restaurant, method: :delete, data: { turbo_method: :delete } %>
      <% end %>
    </p>
  <% end %>
</div>

<% if policy(Restaurant).create? %>
  <%= link_to "New restaurant", new_restaurant_path %>
<% end %>
